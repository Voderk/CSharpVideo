        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartVideo"
        mc:Ignorable="d"
        Title="News" Height="300" Width="300">
    <Grid>
        <ListBox x:Name="listBox" Height="122" Margin="10,10,9.6,0" VerticalAlignment="Top"/>
        <RichTextBox x:Name="richTextBox" Height="100" Margin="10,137,9.6,0" VerticalAlignment="Top">
            <FlowDocument/>
        </RichTextBox>
        <Button x:Name="button" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,242,0,0"/>
        <Button x:Name="button_Copy" Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="110,243,0,0"/>
        <Button x:Name="button_Copy1" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="209,243,0,0"/>

    </Grid>
</Window>
